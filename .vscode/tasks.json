{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make run",
            "type": "shell",
            "command": "make run",
            "problemMatcher": ["$go"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make deploy",
            "type": "shell",
            "command": "make deploy",
            "problemMatcher": ["$go"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "make clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": ["$go"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
    ]
}
